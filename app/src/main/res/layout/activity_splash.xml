<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Conteneur LinearLayout pour regrouper le texte et l'animation -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginTop="100dp"> <!-- Marge pour ne pas être trop près du haut -->

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slogan"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:layout_marginBottom="20dp" /> <!-- Marge entre le texte et l'animation -->

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_fileName="start_animation.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true" />

    </LinearLayout>

</RelativeLayout>
